page {
  --index-anchor-padding: 0;
  --index-bar-index-font-size: var(--size-large);
}

.anchor {
  background-color: var(--color-background);
  font-size: var(--size-large);
  color: var(--color-text);
  /* font-weight: 500; */
}

.item {
  display: flex;
  align-items: center;
  margin: 16rpx 0;
}

.item .img {
  width: 158rpx;
  height: 84rpx;
  border: 1px solid #f5f5f5;
  border-radius: 10rpx;
  overflow: hidden;
}

.item .img image {
  width: 100%;
  height: 100%;
}

.item .name {
  margin-left: 16rpx;
  flex: 1;
  font-size: var(--size-large);
  color: var(--color-text-i);
}

.van-index-bar__index {
  padding: 10rpx !important;
  color: var(--color-text-i);
  font-weight: 300 !important;
}

.recommend {
  flex-wrap: wrap;
}

.recommend .img {
  margin: 10rpx;
}
