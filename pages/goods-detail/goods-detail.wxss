page {
  background-color: var(--color-background);
}

.body {
  position: fixed;
  top: 0;
  bottom: 100rpx;
  width: 100%;
}

.slider-wrap {
  padding: 12rpx;
  height: 674rpx;
}

.middle {
  margin-bottom: 12rpx;
  padding: 15rpx 10rpx;
  background-color: var(--color);
}

.m-price {
  font-size: var(--size-large-x);
  color: var(--color-theme);
}

.f-price {
  font-size: var(--size-small);
  color: var(--color-text);
  padding: 8rpx 0;
}

.f-price .text {
  text-decoration: line-through;
}

.name {
  font-size: var(--size-large-x);
  color: var(--color-text);
  padding: 8rpx 0;
  line-height: 1.5;
}

.tag-wrap {
  height: 46rpx;
  display: flex;
  align-items: center;
}

.tag-wrap v-tag {
  margin-right: 8rpx;
}

.inventory {
  font-size: var(--size-small);
  color: var(--color-text);
  padding: 8rpx 0;
}

/* parameter */
.parameter-wrap {
  margin: 16rpx 0;
}

.parameter {
  padding: 20rpx 15rpx;
  background-color: var(--color);
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.parameter .text {
  flex: 1;
}

.m-text {
  font-size: var(--size-large);
  color: var(--color-text-i);
  margin-right: 14rpx;
}

.f-text {
  font-size: var(--size-small);
  color: var(--color-text-i);
}

.pop-container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.pop-container .head {
  display: flex;
  align-items: center;
  flex: 0 0 130rpx;
}

.pop-container .head .img {
  width: 125rpx;
  height: 125rpx;
}

.pop-container .head .detail {
  flex: 1;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.pop-container .head .detail .price {
  font-size: var(--size-large-x);
  color: var(--color-theme);
}

.pop-container .head .detail .choice {
  font-size: var(--size-small);
  color: var(--color-text);
}

.pop-container .params {
  flex: 1;
  margin-top: 24rpx;
  overflow: hidden;
}

.param-item .name {
  font-size: var(--size-normal);
  color: var(--color-text);
}

.param-item .item-wrap {
  display: flex;
}

.param-item .item-wrap v-tag {
  margin-right: 20rpx;
  margin-bottom: 10rpx;
}

.num-wrap {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 28rpx;
}

.num-wrap .name {
  font-size: var(--size-normal);
  color: var(--color-text);
}

/* parameter */

.detail-wrap {
  padding: 12rpx;
}

.detail-wrap .title {
  text-align: center;
  font-size: var(--size-large-x);
  color: var(--color-theme);
}

.detail-wrap .content {
  background-color: var(--color);
  border-radius: 10rpx;
  min-height: 100rpx;
  padding: 12rpx;
  margin: 15rpx 0;
}
