<view class="container">
  <view class="add-address">
    <van-field
      data-name="truename"
      label="联系人"
      placeholder="收货人姓名"
      value="{{addressData['truename']}}"
      bind:change="onChange"
    />
    <van-field
      data-name="mobile"
      label="手机号"
      placeholder="收货人手机号码"
      value="{{addressData['mobile']}}"
      bind:change="onChange"
    />
    <van-field
      data-name="regionId"
      label="省份"
      placeholder="请选择"
      value="{{addressData['regionId']}}"
      bind:change="onChange"
    />
    <van-field
      data-name="address"
      label="地址"
      placeholder="楼号、门牌"
      value="{{addressData['address']}}"
      bind:change="onChange"
    />
    <van-cell title="设为默认地址">
      <van-switch
        data-name="is_default"
        checked="{{addressData['is_default']}}"
        bind:change="onChange"
      />
    </van-cell>
    <text class="delete">删除收货地址</text>
    <van-button type="danger" round block>保存</van-button>
  </view>
</view>

<van-popup show="{{show}}" bind:close="onClose">
  <view class="pircker-container">
    <van-picker columns="{{columns}}" bind:change="onChange" />
  </view>
</van-popup>
