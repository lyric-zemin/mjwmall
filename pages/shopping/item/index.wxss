.shopping-item {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
}

.shopping-content {
  margin-left: 10rpx;
  flex: 1;
  display: flex;
  align-items: center;
}

.img-wrap {
  width: 146rpx;
  height: 150rpx;
  overflow: hidden;
}

.img {
  width: 146rpx;
  height: 146rpx;
  border-radius: 10rpx;
}

.des-wrap {
  margin-left: 10rpx;
  flex: 1;
}

.name {
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  font-size: var(--size-large);
  color: var(--color-text);
  margin-bottom: 12rpx;
  font-weight: bold;
}

.type {
  font-size: var(--size-large);
  color: var(--color-text);
  margin-bottom: 6rpx;
}

.tag-wrap {
  display: flex;
}

.tag-wrap v-tag {
  margin-right: 8rpx;
}

.foot-wrap {
  margin-top: 26rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.left {
  flex: 1;
  margin-right: 10rpx;
  overflow: hidden;
}

.price {
  color: var(--color-theme);
}

.btn {
  display: flex;
  align-items: center;
}

.btn van-icon {
  padding: 20rpx;
}

.btn-inner van-tag {
  margin-right: 6rpx;
}