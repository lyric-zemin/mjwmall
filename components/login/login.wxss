.login-container {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.login-inner {
  width: 80%;
  box-sizing: border-box;
  padding: 32rpx 20rpx 0;
  background-color: #fff;
  border-radius: 20rpx;
  text-align: center;
  line-height: 1.5;
  color: var(--color-text);
}

.title {
  color: #000;
  font-size: 36rpx;
  margin-bottom: 20rpx;
}

.content {
  font-size: 28rpx;
  color: #a9a9a9;
}

.btn-container {
  margin-top: 20rpx;
}

.cancel {
  color: #bd0416 !important;
  width: 50%;
  border-color: transparent !important;
}

.confirm {
  color: #07c160 !important;
  width: 50%;
  border-color: transparent !important;
}
