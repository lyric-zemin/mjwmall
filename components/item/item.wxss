.item {
  box-sizing: border-box;
  width: 354rpx;
  height: 525rpx;
  padding: 12rpx 6rpx;
  background-color: var(--color);
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}

.img-wrap {
  height: 350rpx;
  overflow: hidden;
  display: flex;
  justify-content: center;
  align-items: center;
}

.img {
  max-width: 100%;
  max-height: 100%;
}

.name {
  font-size: var(--size-small);
  color: var(--color-text-i);
  line-height: 1.4;
  height: 2.8em;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  text-overflow: ellipsis;
  overflow: hidden;
  padding-top: 6rpx;
}

.tag-wrap {
  height: 36rpx;
  padding: 10rpx 0;
  display: flex;
  align-items: center;
}

.tag-wrap v-tag {
  margin-right: 6rpx;
}

.foot-wrap {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.price {
  color: var(--color-theme-text);
  flex: 1;
  font-size: var(--size-small);
}

.pay {
  font-size: var(--size-small-x);
  color: var(--color-text-i);
  margin-left: 1em;
}
